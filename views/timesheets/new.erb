    </select>

    <label for="">Sunday: </label>
    <select name="sun">
        <option value="u">Unavailable</option>
        <% if day_available("sun", current_user['id']) %>
            <option value="a" selected>Available</option>
        <% else %>
            <option value="a">Available</option>
        <% end %>
    </select>

    <label for="">Notes: </label>
    <% if uploaded?(current_user['id']) %>
        <textarea name="notes" cols="30" rows="10"><%= find_timesheet(current_user['id'])['notes'] %></textarea>
        <button>Edit</button>
    <% else %>
        <textarea name="notes" cols="30" rows="10"></textarea>
        <button>Submit</button>
    <% end %>
</form>