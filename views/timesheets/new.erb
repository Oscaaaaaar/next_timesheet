        <% end %>
    </select>

    <label for="">Thursday: </label>
    <select name="thu">
        <option value="u">Unavailable</option>
        <% if day_available("thu", current_user['id']) %>
            <option value="a" selected>Available</option>
        <% else %>
            <option value="a">Available</option>
        <% end %>
    </select>

    <label for="">Friday: </label>
    <select name="fri">
        <option value="u">Unavailable</option>
