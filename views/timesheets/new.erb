<h1>Hi <%= current_user['name'] %></h1>
<form action="/timesheets/new" method="POST">
    <label for="">Your Manager_id: </label>
    <% if uploaded?(current_user['id']) %>
        <input type="text" name="manager_id" value=<%= find_timesheet(current_user['id'])['manager_id'] %>>
    <% else %>
        <input type="text" name="manager_id">
    <% end %>
    <label for="">Monday: </label>
    <select name="mon">
        <option value="u">Unavailable</option>
        <% if day_available("mon", current_user['id']) %>
            <option value="a" selected>Available</option>
        <% else %>
            <option value="a">Available</option>
        <% end %>
    </select>

    <label for="">Tuesday: </label>
    <select name="tue">
        <option value="u">Unavailable</option>
        <% if day_available("tue", current_user['id']) %>
