<h1>您好 <%= current_user['name'] %></h1>
<form action="/timesheets/new" method="POST">
    <label for="">您的团队编号: </label>
    <% if uploaded?(current_user['id']) %>
        <input type="text" name="manager_id" value=<%= find_timesheet(current_user['id'])['manager_id'] %>>
    <% else %>
        <input type="text" name="manager_id">
    <% end %>
    <label for="">周一: </label>
    <select name="mon">
        <option value="u">N</option>
        <% if day_available("mon", current_user['id']) %>
            <option value="a" selected>A</option>
        <% else %>
            <option value="a">A</option>
        <% end %>
    </select>

    <label for="">周二: </label>
    <select name="tue">
        <option value="u">N</option>
        <% if day_available("tue", current_user['id']) %>
